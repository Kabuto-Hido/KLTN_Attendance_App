<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminSettingsFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F8F8">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#2196F3"
            android:padding="6dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Settings"
                android:textStyle="bold"
                android:layout_marginStart="30dp"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_marginBottom="2dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtEmployee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage Employees"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@drawable/border_line"
            android:drawablePadding="24dp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/ic_baseline_manage_employee" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#AEAEAE"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtListResignations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="List of Resignations"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="@drawable/border_line"
                android:drawablePadding="24dp"
                app:drawableStartCompat="@drawable/ic_baseline_access_time_filled_24" />

            <TextView
                android:id="@+id/txtQuantityResignation"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:background="@drawable/noti_rounded"
                android:visibility="invisible"
                android:text="1"
                android:layout_alignParentEnd="true"
                android:textColor="@color/white"
                android:textSize="18dp"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#AEAEAE"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notification"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="@drawable/border_line"
            android:drawablePadding="24dp"
            app:drawableStartCompat="@drawable/ic_baseline_notifications_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#AEAEAE"/>
        <TextView
            android:id="@+id/txtAdminChangePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/border_line"
            android:drawablePadding="24dp"
            app:drawableStartCompat="@drawable/ic_baseline_change_password" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#AEAEAE"/>
        <TextView
            android:id="@+id/txtAdminProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/border_line"
            android:textSize="20sp"
            android:drawablePadding="24dp"
            app:drawableStartCompat="@drawable/ic_baseline_profile_person" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#AEAEAE"/>

        <TextView
            android:id="@+id/txtAdminLogOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log out"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/border_line"
            android:textSize="20sp"
            android:drawablePadding="24dp"
            app:drawableStartCompat="@drawable/ic_logout" />

    </LinearLayout>

</FrameLayout>