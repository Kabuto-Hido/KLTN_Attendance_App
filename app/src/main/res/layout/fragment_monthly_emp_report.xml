<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MonthlyEmpReportFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ly1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="#2196F3"
            android:padding="6dp">
            <ImageView
                android:id="@+id/btnBackMonthlyEmpReport"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_arrow_back_white_24"/>
            <TextView
                android:id="@+id/labelMonthly"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Monthly Employee Report"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:textColor="@color/white"
                android:textSize="25sp"/>

            <SearchView
                android:id="@+id/searchMonthEmpReport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:iconifiedByDefault="false"
                android:theme="@style/SearchViewStyle"
                android:contextClickable="true"
                android:queryHint="Type here for search"
                android:closeIcon="@drawable/ic_close"
                android:searchHintIcon="@drawable/ic_search"
                android:layout_marginStart="5dp"
                android:searchIcon="@drawable/ic_search"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtMonth"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textSize="19sp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:drawablePadding="15sp"
            android:textStyle="bold"
            android:layout_below="@+id/ly1"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            app:drawableStartCompat="@drawable/calendar_white" />

        <TextView
            android:id="@+id/txtnotifi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/txtMonth"
            android:text=""
            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:visibility="invisible" />

        <ListView
            android:id="@+id/listviewEmpReport"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/txtMonth"
            android:dividerHeight="10sp"
            android:divider="#F8F8F8"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnExportPDF"
            android:backgroundTint="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="625dp"
            android:layout_marginEnd="47dp"
            android:layout_marginBottom="30dp"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/export_pdf" />

    </RelativeLayout>

</FrameLayout>