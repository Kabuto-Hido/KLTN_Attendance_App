<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/empImageView"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/person_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:layout_marginStart="15dp"
        android:id="@+id/txtEmpCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Code"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize= "18sp"
        app:layout_constraintLeft_toRightOf="@id/empImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginStart="15dp"
        android:id="@+id/txtspace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize= "18sp"
        app:layout_constraintLeft_toRightOf="@id/txtEmpCode"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginStart="15dp"
        android:id="@+id/txtEmpName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Employee name"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize= "18sp"
        app:layout_constraintLeft_toRightOf="@id/txtspace"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtLabelStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Status: "
        android:layout_marginStart="15dp"
        app:layout_constraintLeft_toRightOf="@id/empImageView"
        app:layout_constraintTop_toBottomOf="@id/txtEmpName" />

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Absent with permission/Checkin"
        android:layout_marginStart="5dp"
        app:layout_constraintLeft_toRightOf="@id/txtLabelStatus"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/txtEmpName" />

    <ImageView
        android:id="@+id/btnEditRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_edit_record"/>
</androidx.constraintlayout.widget.ConstraintLayout>