<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/employeeImageView"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/person_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:layout_marginLeft="15dp"
        android:id="@+id/txtEmployeeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Employee name"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize= "18dp"
        app:layout_constraintLeft_toRightOf="@id/employeeImageView"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: "
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toRightOf="@id/employeeImageView"
        app:layout_constraintTop_toBottomOf="@id/txtEmployeeName"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Absent with permission/Checkedin"
        app:layout_constraintLeft_toRightOf="@id/txtStatus"
        app:layout_constraintTop_toBottomOf="@id/txtEmployeeName"
        />


</androidx.constraintlayout.widget.ConstraintLayout>