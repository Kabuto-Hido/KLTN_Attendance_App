<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#434343">

    <ImageView
        android:id="@+id/btnCloseDetailFeedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_gravity="start"
        android:src="@drawable/ic_close"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtUUIDFeedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="code"
            android:textStyle="bold"
            android:background="#565656"
            android:layout_marginStart="20dp"
            android:textColor="@color/white"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/txtNameFeedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/txtUUIDFeedback"
            android:text="name"
            android:textAlignment="center"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="20dp"
            android:background="#565656"
            android:textColor="@color/white"
            android:textSize="20sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/txtDetailFeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="20sp"
        android:singleLine="false"
        android:background="#565656"
        android:text="My phone is broken so i can"
        android:lines="6"
        android:maxLines="6"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/white"
        android:layout_marginStart="20dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/img1Feedback"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_add_image"/>

        <ImageView
            android:id="@+id/img2Feedback"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_toEndOf="@+id/img1Feedback"
            android:layout_marginStart="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_add_image"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/txtLabelContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact: "
            android:background="#565656"
            android:layout_marginStart="20dp"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/txtContactFeedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/txtLabelContact"
            android:text="contact"
            android:textAlignment="center"
            android:background="#565656"
            android:textColor="@color/white"
            android:textSize="20sp"/>
    </RelativeLayout>

    <TextView
        android:layout_marginStart="15dp"
        android:id="@+id/txtCreateAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:text="Date"
        android:layout_margin="20dp"
        android:textSize= "15sp"
        android:textColor="@color/white"
        android:layout_gravity="end" />

</androidx.appcompat.widget.LinearLayoutCompat>