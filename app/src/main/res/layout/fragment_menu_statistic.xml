<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MenuStatisticFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F8F8">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#2196F3"
            android:padding="6dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Reports"
                android:textStyle="bold"
                android:layout_marginStart="30dp"
                android:textColor="@color/white"
                android:textSize="25sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtTodayStatistic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today Report"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/border_line"
            android:textSize="20sp"
            android:drawablePadding="24dp"
            app:drawableStartCompat="@drawable/ic_today" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#AEAEAE"/>

        <TextView
            android:id="@+id/txtMonthStatistic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Month Report"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="@drawable/border_line"
            android:drawablePadding="24dp"
            app:drawableStartCompat="@drawable/ic_month" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#AEAEAE"/>

        <TextView
            android:id="@+id/txtEmpReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monthly Employee Report"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/border_line"
            android:drawablePadding="24dp"
            app:drawableStartCompat="@drawable/ic_emp_report" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#AEAEAE"/>

    </LinearLayout>

</FrameLayout>