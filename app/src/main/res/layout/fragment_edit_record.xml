<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".EditRecordFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="7dp"
        android:background="#2196F3"
        android:id="@+id/linearLayout">
        <ImageView
            android:id="@+id/btnBackEditRecord"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_arrow_back_white_24"/>
        <TextView
            android:id="@+id/layoutEditRecord"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:gravity="center_vertical"
            android:text="Update Record"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtRecordDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-medium"
        android:layout_below="@+id/linearLayout"
        android:text="--/--/----"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgRecordEmp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/txtRecordDay"
        android:layout_marginStart="20sp"
        android:layout_marginTop="20dp"
        android:src="@drawable/person_white"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txtRecordEmpCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgRecordEmp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edt_background"
        android:drawablePadding="15sp"
        android:padding="15dp"
        android:textSize="18sp"
        android:textColor="#FF3131"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/ic_numbers" />

    <TextView
        android:id="@+id/txtRecordEmpName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtRecordEmpCode"
        android:layout_marginStart="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edt_background"
        android:drawablePadding="15sp"
        android:padding="15dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/person_white" />

    <TextView
        android:id="@+id/labelStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_below="@id/txtRecordEmpName"
        android:layout_marginStart="20sp"
        android:text="Status"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20sp"
        app:strokeWidth="2dp"
        app:strokeColor="#DADADA"
        android:layout_toEndOf="@+id/labelStatus"
        android:layout_below="@+id/txtRecordEmpName"
        app:cardCornerRadius="10dp">

        <androidx.appcompat.widget.AppCompatSpinner
            android:contentDescription="spinnerStatus"
            android:id="@+id/spinnerStatus"
            android:layout_width="match_parent"
            android:backgroundTint="@color/black"
            android:layout_height="48dp"/>

    </com.google.android.material.card.MaterialCardView>

    <EditText
        android:id="@+id/edtReasonChange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edt_background"
        android:drawableStart="@drawable/ic_reason"
        android:layout_below="@+id/cardView"
        android:drawablePadding="15sp"
        android:hint="Reason"
        android:textSize="22sp"
        android:lines="4"
        android:maxLines="5"
        android:inputType="textMultiLine|text"
        android:padding="15dp"
        android:textColorHint="#AA4B5151"
        android:textStyle="bold"
        android:autofillHints="" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnConfirmUpdateRecord"
        android:layout_width="300sp"
        android:layout_height="65sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:backgroundTint="#2196F3"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-thin"
        android:text="Confirm"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="30sp" />

</RelativeLayout>