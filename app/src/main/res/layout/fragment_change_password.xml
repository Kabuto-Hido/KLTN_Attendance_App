<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ChangePasswordFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F8F8">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#2196F3"
            android:padding="6sp">
            <ImageView
                android:id="@+id/btnBackChangePassword"
                android:layout_width="40sp"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_arrow_back_white_24"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Password"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:textColor="@color/white"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5sp">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="Current password:"/>
                <TextView
                    android:id="@+id/txtShowPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="SHOW"/>
            </LinearLayout>

            <EditText
                android:id="@+id/edittextCurrentPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter current password"
                android:autofillHints="password"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:textSize="18sp"
                android:background="@drawable/edt_background"
                android:padding="10dp"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="New password:"
                android:paddingBottom="5sp"/>

            <EditText
                android:id="@+id/edittextNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter new password"
                android:autofillHints="password"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:textSize="18sp"
                android:background="@drawable/edt_background"
                android:padding="10sp"/>

            <EditText
                android:id="@+id/edittextConfirmNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Confirm new password"
                android:autofillHints="password"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:textSize="18sp"
                android:background="@drawable/edt_background"
                android:padding="10sp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConfirmChangePassword"
                android:layout_width="250sp"
                android:layout_height="60sp"
                android:textColor="@color/white"
                android:layout_marginTop="15sp"
                android:text="Update"
                android:textSize="18sp"
                android:backgroundTint="#2196F3"
                android:layout_gravity="center"
                app:cornerRadius="45dp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>